<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    
    <changeSet id="1" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="login" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(20)"/>
            <column name="role" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="sermon"/>
            </not>
        </preConditions>
        <createTable tableName="sermon">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="url" type="VARCHAR(255)"/>
            <column name="img" type="VARCHAR(255)"/>
            <column name="title" type="VARCHAR(255)"/>
            <column name="speaker" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="date" type="DATE"/>
        </createTable>
    </changeSet>
</databaseChangeLog>